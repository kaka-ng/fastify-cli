{
  "name": "fastify-cli",
  "version": "3.1.0",
  "description": "Run a fastify route with one command!",
  "main": "dist/index.js",
  "bin": {
    "fastify": "./bin/run"
  },
  "files": [
    "/bin",
    "/dist",
    "/templates",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "lint:fix": "npm run lint --fix",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "unit": "",
    "test": ""
  },
  "keywords": [
    "fastify",
    "cli",
    "one command"
  ],
  "author": "Tomas Della Vedova - @delvedor (http://delved.org)",
  "contributors": [
    {
      "name": "Matteo Collina",
      "email": "hello@matteocollina.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fastify/fastify-cli.git"
  },
  "bugs": {
    "url": "https://github.com/fastify/fastify-cli/issues"
  },
  "homepage": "https://github.com/fastify/fastify-cli#readme",
  "engines": {
    "node": ">= 12"
  },
  "dependencies": {
    "@fastify/autoload": "^4.0.0",
    "@fastify/sensible": "^4.0.0",
    "@oclif/core": "^1.8.2",
    "@oclif/plugin-help": "^5.1.12",
    "ejs": "^3.1.8",
    "fastify": "^3.0.0",
    "fastify-plugin": "^3.0.0",
    "inquirer": "^8.2.4"
  },
  "devDependencies": {
    "@oclif/test": "^2.1.0",
    "@types/ejs": "^3.1.1",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^17.0.0",
    "@types/tap": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "eslint": "^7.12.1",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.0.0",
    "oclif": "^3.0.1",
    "shx": "^0.3.4",
    "tap": "^16.2.0",
    "ts-node": "^10.7.0",
    "typescript": "~4.6.0"
  },
  "oclif": {
    "bin": "fastify",
    "dirname": "fastify",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "generate": {
        "description": "Generate boilerplate"
      }
    }
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "overrides": [
      {
        "files": [
          "templates/**/*.test.ts"
        ],
        "rules": {
          "@typescript-eslint/no-floating-promises": "off"
        }
      }
    ]
  }
}
